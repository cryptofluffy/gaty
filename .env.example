# FastSpring API Configuration
# Get these from your FastSpring Dashboard > Developer Tools > API Credentials

# FastSpring API Username (required)
VITE_FASTSPRING_USERNAME=your_fastspring_username

# FastSpring API Password (required)
VITE_FASTSPRING_PASSWORD=your_fastspring_password

# Your FastSpring Storefront URL (required)
VITE_FASTSPRING_STOREFRONT=yourstore.onfastspring.com

# Use Mock API for development (true/false)
VITE_USE_FASTSPRING_MOCK=true

# Production/Development Mode
NODE_ENV=development

# VPS Configuration
VITE_VPS_DOMAIN=your-vps-domain.com
VITE_VPS_IP=your.vps.ip.address

# Gateway Installer Configuration
VITE_GATEWAY_INSTALLER_URL=https://raw.githubusercontent.com/yourusername/gateway-installer/main/install.sh

# Optional: Webhook Configuration
VITE_FASTSPRING_WEBHOOK_SECRET=your_webhook_secret_key